<% title "Article" %>

<p></p>

<h4><%=h @gallery.title %></h4>

<div id="news_article_photo">
  <div class="last_photo">
    <%= image_tag @gallery.photo.url(:preview) %>
  </div>

  <div id="news_article_photo_tag">
    <b><%=h @gallery.location %></b><br />
    <%=h @gallery.date_of_event %><br /><br />
    <%=h @gallery.photographer %><br /><br />
  </div>
</div>

<p class="return_link">
  <% if admin? %>
    <span><%= link_to 'Edit', edit_gallery_path(@gallery) %></span>
    <span> | </span>
    <span><%= link_to "Destroy", @gallery, :confirm => 'Are you sure?', :method => :delete %></span>
    <span> | </span>
  <% end %>
  <span><%= link_to 'View All', galleries_path %></span>
</p>

