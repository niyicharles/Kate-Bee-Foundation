<% title "Galleries" %>

<p></p>

<% for gallery in @galleries %>

  <span class="pic_pt">
    <div class="pic_pt_image_holder">
      <%= link_to image_tag(gallery.photo.url(:thumbnail)), gallery %>
    </div>

    <div class="pic_pt_text_holder">
      <%=h truncate(gallery.title.gsub(/<.*?>/,''), :length => 45) %>
    </div>

    <div class="pic_pt_button_holder">
      <%= link_to image_tag("view_picture_button.jpg"), gallery %>
    </div>
  </span>

  <span class="pic_pt_gap">
  </span>

<% end %>

<div class="pagination">
  <%= will_paginate @galleries %>
</div>


<% if admin? %>
  <p class="return_link">
	  <%= link_to 'New gallery', new_gallery_path %>
  </p>
<% end %>

