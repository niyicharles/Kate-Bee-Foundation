<% title "Welcome To KateBeeFoundation" %>

<p>

    <div id="welcome_message_link_border">

      <div id="welcome_message_one_gap">
      <!-- end #welcome_message_one_gap --></div>

      <div id="welcome_message_link"><%= link_to 'View Our Welcome Message', welcome_path %>
      <!-- end #welcome_message_link --></div>

    <!-- end #welcome_message_link_border --></div>

    <p id="contact_holder_link">
        <%= link_to "&gt;&gt; KBF Brochure (137KB) - Kate  Bee Foundation", "http://www.katebeefoundation.org/new_img/KBF%20profile.pdf" %>
    <!-- end #contact_holder_link --></p>

</p>

<div id="mini_navigation">

  <% for visitor in @visitors %>
    <%= link_to visitor.name, visitor.name %>
  <% end %>

<!-- end #mini_navigation --></div>

<div id="mini_navigation_gap">
<!-- end #mini_navigation_gap --></div>

<p>
<div id="page_image_title_holder_index_holder">
  <div id="page_image_title_holder_gallery">
  <!-- end #page_image_title_holder_gallery --></div>

  <div id="temp_gallery_slides">

    <% for gallery in @last_four_gallery %>

    <span class="pic_pt_gallery">
      <div class="pic_pt_image_holder">
        <%= link_to image_tag(gallery.photo.url(:thumbnail)), gallery %>
      </div>

      <div class="pic_pt_text_holder">
        <%=h truncate(gallery.title.gsub(/<.*?>/,''), :length => 45) %>
      </div>

      <div class="pic_pt_button_holder">
        <%= link_to image_tag("view_picture_button.jpg"), gallery %>
      </div>
    </span>

    <span class="pic_pt_gap_gallery">
    </span>

    <% end %>

  <!-- end #temp_gallery_slides --></div>

  <div id="page_image_holder_gallery_footer">
  <!-- end #page_image_holder_gallery_footer --></div>
<!-- end #page_image_title_holder_index_holder --></div>

</p>

<div id="latest_articles_holder">

  <div id="page_image_title_holder_articles">
  <!-- end #page_image_title_holder_articles --></div>

<% @last_two_articles.each do |article| %>
<div valign="top" class="<%= cycle('articles_div_index_odd', 'articles_div_index_even') %>">

    <div class="articles_div_space_index">
    </div><!-- end .articles_div_space_index -->

  <div class="article_div_title"><%=h truncate(article.title.gsub(/<.*?>/,''), :length => 50) %></div>

  <span class="articles_div_photo_holder">
    <div class="articles_div_photo">
      <%= link_to image_tag(article.photo.url(:snapshot)), article %>
    </div><!-- end .articles_div_photo -->
  </span><!-- end .articles_div_photo_holder -->

  <span class="articles_div_gap_2">
  </span><!-- end .articles_div_gap_2 -->

  <span class="articles_div_details">

    <div class="article_div_description"><%=h truncate(article.information.gsub(/<.*?>/,''), :length => 500) %></div>

    <div class="articles_div_information_location_gap">
    </div><!-- end .articles_div_information_location_gap -->

    <div class="article_div_emphasis"><%=h truncate(article.emphasis.gsub(/<.*?>/,''), :length => 40) %></div>

    <div class="last_location"><%=h truncate(article.location.gsub(/<.*?>/,''), :length => 40) %></div>

    <div class="last_author"><%= article.author %></div>

    <div class="last_date"><%= article.date_of_event %></div>

  </span><!-- end .articles_div_details -->

</div><!-- end .articles_div_odd -->
<% end %>

  <div id="page_image_holder_footer_index">
  <!-- end #page_image_holder_footer_index --></div>

<!-- end #latest_articles_holder --></div>

