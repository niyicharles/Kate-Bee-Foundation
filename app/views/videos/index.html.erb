<% title "Videos" %>

<p></p>

<% for video in @videos %>

  <span class="pic_pt">
    <div class="pic_pt_image_holder">
      <%= link_to image_tag("http://img.youtube.com/vi/#{video.identity}/0.jpg", :width => 130, :height => 98), video %>
    </div>

    <div class="pic_pt_text_holder">
      <%=h truncate(video.title.gsub(/<.*?>/,''), :length => 45) %>
    </div>

    <div class="pic_pt_button_holder">
      <%= link_to image_tag("view_picture_button.jpg"), video %>
    </div>
  </span>

  <span class="pic_pt_gap">
  </span>

<% end %>

<div class="pagination">
  <%= will_paginate @videos %>
</div>


<% if admin? %>
  <p class="return_link">
	  <%= link_to 'New video', new_video_path %>
  </p>
<% end %>

