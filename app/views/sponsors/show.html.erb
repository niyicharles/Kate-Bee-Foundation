<% title "Sponsor" %>

<p></p>

  <div class="article_div_title"><%=h @sponsor.title.capitalize + " " + @sponsor.firstname.capitalize + " " + @sponsor.othernames.capitalize + " " + @sponsor.lastname.capitalize %></div>

  <div class="article_div_address"><span class="event_manage">Address:</span><%=h " " + truncate(@sponsor.address.gsub(/<.*?>/,''), :length => 500) %></div>

  <div class="article_div_address"><span class="event_manage">Phone:</span><%=h " " + @sponsor.phone %></div>

  <div class="article_div_address"><span class="event_manage">Email:</span><%=h " " + @sponsor.email %></div>

  <div class="article_div_address"><span class="event_manage">Interest:</span><%=h " " + @sponsor.projectname %></div><br />

    <div class="event_manage">

  	  <span><%= link_to 'View All', sponsors_path %></span>

      <% if admin? %>
        <span> | </span>
        <span><%= link_to 'Edit', edit_sponsor_path(@sponsor) %></span>
        <span> | </span>
        <span><%= link_to 'Destroy', @sponsor, :confirm => 'Are you sure?', :method => :delete %></span>
      <% end %>

    </div><!-- end .event_manage -->

